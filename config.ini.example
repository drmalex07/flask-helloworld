[DEFAULT]

debug = on

data_dir = %(here)s/data

[server:main]

use = native

[server:native]

use = egg:helloworld#native
debug = on
host = helloworld.internal
port = 5000

[pipeline:main]

pipeline =
    static
    session
    who 
    main-app

[filter:static]

use = egg:helloworld#static
document_root = %(here)s/public
cache_max_age = 1800

[filter:session]

use = egg:helloworld#session

session.type = file
session.data_dir = %(data_dir)s/session/
session.key = helloworld
session.secret = dJkUgAajzrRiD8hrNbdcnQ==
session.timeout = 3600
cache.type = file
cache.data_dir = %(data_dir)s/cache/
cache.lock_dir = %(data_dir)s/cache/locks

[filter:who]

use = egg:helloworld#who

config_file = %(here)s/who.ini
log_file = %(data_dir)s/who.log

[app:main-app]

use = egg:helloworld#main

database.url = sqlite:////%(data_dir)s/main.db

who.config = %(here)s/who.ini
who.log = %(data_dir)s/who.log


[loggers]
keys = root

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = DEBUG
formatter = generic

[formatter_generic]
format = %(levelname)-7.7s [%(name)s] [%(threadName)s] %(message)s
datefmt = %H:%M:%S
